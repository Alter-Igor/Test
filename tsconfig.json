{
  "compilerOptions": {   
    "outDir": "./dist/",
    "isolatedModules": false,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "target": "ES2020",
    "module": "ESNext",
    "allowJs": true,
    "moduleResolution": "node",
     "rootDir": ".",                                  /* Specify the root folder within your source files. */
